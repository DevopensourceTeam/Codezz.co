extends layout

block content
  .row.login-box
    form(role='form', method='POST', class="form-signin mg-btm")
      input(type='hidden', name='_csrf', value=_csrf)
      h3.heading-desc
        | Contact form
      .main
        input.form-control(type='text', name='name', id='name', autofocus=true, placeholder="Name")
        input.form-control(type='text', name='email', id='email', placeholder="Email")
        textarea.form-control(type='text', name='message', id='message', rows='7')
        span.clearfix
      .login-footer
        .row
          .col-xs-6.col-md-6
          .col-xs-6.col-md-6.pull-right
            button.btn.btn-primary.pull-right(type='submit')
              span.ion-paper-airplane
              | Send
